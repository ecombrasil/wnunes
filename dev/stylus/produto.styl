#product-wrapper
  width 80%
  margin 0 auto
  text-align center

  .product-name
    width 100%
    margin-top 25vh
    font-weight 900
    letter-spacing .15em
    line-height 1em
    text-transform uppercase
    color rgba(text-color, .2)

    &.title-size-1
      font-size 18em

    &.title-size-2
      font-size 16em

    &.title-size-3
      font-size 10em
      text-transform none
      line-height 1.05em
      letter-spacing .1em

    .title-first-line
      color theme-color
  
  .product-description
    width 50%
    margin 0 auto
    font-size 1.7em
    font-weight 400
    line-height 1.5em

    &:nth-child(1)
      margin-top 5em

  .product-image
    max-width 50%
    height auto
    margin 10em auto 10em auto

  .product-section
    width 50%
    margin 0 auto
    font-size 3.5em
    font-weight 800
    margin-bottom 2.75em

  .customer-rating
    padding 3.5em
    width calc(50% - 7em - 2px)
    margin 0 auto 4em auto
    border(1px, solid, #ddd)
    border-radius(2em)
    text-align center

    .customer-name
      font-size 2.5em
      font-weight 700

    .rating-stars
      margin-top 1.75em
      flex-parent(row, nowrap, center)

      .rating-star-icon
        flex-basis f-bs = 1.8em
        height f-bs
        margin .35em

      .rating-date
        align-self flex-end
        margin-bottom .08em
        margin-left .8em
        font-size 1.5em
        font-weight 500
        color rgba(text-color, .6)

    .rating-text
      margin-top 1.7em
      font-size 1.7em
      font-weight 400
      line-height 1.55em
  
  .help-box
    width 28em
    margin 10em auto 0 auto
    padding 1.5em 3.5em 1.5em 3.5em
    border(1px, solid, #ddd)
    border-radius(3.25em)
    background-color rgba(text-color, .01)
    flex-parent(row, nowrap, center)
    align-items center

    .help-text
      font-size 1.7em
      font-weight 900
      margin-right 2em
    
    .help-illustration
      height 10em