@import 'resources'

*
  position relative
  margin 0
  padding 0

  &:focus
  &:active
    outline 0

html
  scroll-behavior smooth

body
  font-family font-family
  font-size 62.5%
  color text-color
  background-color #fcfcfc

img
  select(none)

a
  text-decoration none
  color inherit

  &.inner-link
    font-weight 700
    color theme-color

ul
  list-style none

input
textarea
button
  border-style none
  font-family font-family
  font-size inherit
  color inherit
  box-shadow(none)
  outline 0
  background-color transparent

main
  width 100%
  height 100vh
  overflow-y auto

  .wrapper-center
  .wrapper-aparted
    width 100%
    height 100vh

  .wrapper-center
    flex-parent(row, wrap, center)
    align-items center

  .wrapper-aparted
    flex-parent(row, wrap, space-between)

  .page-title
    margin-top 4em
    margin-bottom 1em
    font-size 4.2em
    font-weight 900
    color theme-color
    text-align center

  .opening-page-paragraph
    width 33%
    margin 0 auto
    font-size 1.75em
    font-weight 500
    line-height 1.5em
    text-align center

@media (max-width 1600px)
  body
    font-size 62%

@media (max-width 1366px)
  body
    font-size 60.5%

@media (max-width 1280px)
  body
    font-size 60%

@media (max-width 768px)
  body
    font-size 57.5%

@media (max-width 600px)
  body
    font-size 60%