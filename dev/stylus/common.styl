@import 'resources'

*
  margin 0
  padding 0

  &:focus
  &:active
    outline 0

html
  scroll-behavior smooth

body
  select(none)
  font-family font-family
  font-size 62.5%
  color text-color
  background-color #fff

a
  text-decoration none
  color inherit

input
textarea
button
  border none
  font-family font-family
  font-size inherit
  color inherit
  box-shadow(none)
  outline 0
  background-color transparent