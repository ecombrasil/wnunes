@import 'resources'

*
  position relative
  margin 0
  padding 0

  &:focus
  &:active
    outline 0

html
  scroll-behavior smooth

body
  font-family font-family
  font-size 62.5%
  color text-color
  background-color #fcfcfc

img
  select(none)

a
  text-decoration none
  color inherit

ul
  list-style none

input
textarea
button
  border-style none
  font-family font-family
  font-size inherit
  color inherit
  box-shadow(none)
  outline 0
  background-color transparent

main
  width 100%
  height 100vh
  overflow-y auto

  .wrapper-center
  .wrapper-aparted
    width 100%
    height 100vh

  .wrapper-center
    flex-parent(row, wrap, center)
    align-items center

  .wrapper-aparted
    flex-parent(row, wrap, space-between)

@media (max-width 1600px)
  body
    font-size 62%

@media (max-width 1366px)
  body
    font-size 60.5%

@media (max-width 1280px)
  body
    font-size 60%

@media (max-width 768px)
  body
    font-size 57.5%

@media (max-width 600px)
  body
    font-size 60%