.heading-box
  position absolute
  z-index 0
  width 100%
  height 55vh
  background-color soft-theme-color

.article-cover
  width 90em
  height 47.25em
  margin-top 25vh
  margin-left calc(50% - 45em)
  border-radius(1.5em)
  object-fit cover

.article-title
  width 20em // 90em / 4.2em (font-size)
  margin 1.65em auto 0 auto
  font-size 4.5em
  font-weight 900

.publication-date
  width 60em // 90em / 1.5em (font-size)
  margin 1.5em auto 6em auto
  font-size 1.5em
  font-weight 600
  color rgba(text-color, .65)

.article-content
  width 90em
  margin 0 auto

  img
    max-width 100%
    margin-top mg-top = 2.2em
    margin-bottom mg-top

  h1
  h2
  h3
  h4
  h5
    font-weight 900
    margin-top .75em
    margin-bottom .8em

  p
    margin-bottom 1.1em
    font-size 1.7em
    font-weight 400
    line-height 1.55em

  h1
    font-size 3.5em

  h2
    font-size 3.25em

  h3
    font-size 3em

  h4
    font-size 2.5em
  
  h5
    font-size 2.25em

  blockquote
    p
      text-indent .5em
      font-style italic
      background-color #f0f0f0
      border-top 1px solid #ddd

.end-buttons
  width 90em
  margin 6em auto 0 auto
  flex-parent(row, wrap, flex-start)

  .opt-btn
    font-size 1.7em
    font-weight 700
    padding 1.05em 1.7em .95em 1.7em
    border-radius(.5em)
    background-color #ddd

    &:not(:last-child)
      margin-right 1.75em

    &.highlighted-btn
      color reversed-text-color
      background-color theme-color