#catalog-wrapper
  width 80%
  margin 0 auto
  flex-parent(row, wrap, flex-start)

  @media (max-width 1366px)
    width 90%

  @media (max-width 900px)
    width 92%

  @media (max-width 600px)
    width 86%

  .catalog-item
    width 18%
    margin 0 1.5% 3em 1.5%
    padding 2%
    background rgb(250,250,250)
    background -moz-linear-gradient(172deg, rgba(250,250,250,1) 0%, rgba(255,255,255,1) 100%)
    background -webkit-linear-gradient(172deg, rgba(250,250,250,1) 0%, rgba(255,255,255,1) 100%)
    background linear-gradient(172deg, rgba(250,250,250,1) 0%, rgba(255,255,255,1) 100%)
    box-shadow(0 15px 30px 0 rgba(183, 183, 183, .16))
    border-radius(2em)
    transition(200ms)
    cursor pointer

    &:hover
      box-shadow(0 15px 30px 0 rgba(183, 183, 183, .32))

    .item-img
      width 100%
      height 22em
      border-radius(1.2em)
      object-fit cover

      @media (max-width 1600px)
        height 18em

      @media (max-width 1366px)
        height 16em

    .stars-group
      width 100%
      margin-top 2.25em
      margin-bottom 2.75em
      flex-parent(row, nowrap, flex-start)

      .star
        flex-basis fb = 2em
        height fb
        margin-right .6em
    
    .item-name
    .item-description
      width 100%
      one-line-text()
      font-size 1.65em

    .item-name
      font-weight 800

    .item-description
      margin-top .5em
      font-weight 600
      color rgba(text-color, .83)

.load-more-btn
  display none
  width 20em
  margin 3em auto 0 auto
  padding 1.85em 0 1.7em 0
  font-size 1.7em
  font-weight 700
  letter-spacing .2em
  color reversed-text-color
  text-align center
  text-transform uppercase
  background-color theme-color
  border-radius(2em)
  cursor pointer