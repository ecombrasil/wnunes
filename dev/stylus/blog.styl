// Mixin

rezize-width(auto-margin = false)
  width 80%
  
  if auto-margin
    margin 0 auto

  @media (max-width 1366px)
    width 90%

  @media (max-width 900px)
    width 92%

  @media (max-width 600px)
    width 86%

// Styles

.heading-box
  width 100%
  height 55em
  background-color soft-theme-color

  @media (max-width 1366px)
    height 40em

  @media (max-width 900px)
    height 36em

  @media (max-width 600px)
    height 28em

  .heading-1
    padding-top 3.7em
    font-size 5.25em
    font-weight 900
    color theme-color
    text-align center

.blog-illustration
  position absolute
  top 30em
  left calc(50% - 30em)
  width wdt = 60em
  height wdt

.blog-advantages-wrapper
  rezize-width(true)
  flex-parent(row, wrap, space-between)
  margin-top 3em

  .blog-advantage
    flex-basis 21em

    .blog-advantage-illustration
      width 100%

    .blog-advantage-text
      margin-top .4em
      font-size 1.6em
      font-weight 600
      text-align center
      line-height 1.5em

.blog-section-name
  rezize-width()
  margin 2.75em auto 2.5em auto
  font-size 4em
  font-weight 800
  color theme-color

.articles-wrapper
  rezize-width(true)
  flex-parent(row, wrap, space-between)
  align-items flex-start
  cursor pointer

  .article-wrapper
    flex-basis 47.5%
    margin-bottom 8em

    .article-cover
      width 100%
      height 42em
      margin 0
      border-radius(2)
      object-fit cover

    .article-title
      width 100%
      margin-top 1em
      font-size 2.75em
      font-weight 800
      line-height 1.35em

    .article-description
      width 100%
      margin-top 1.2em
      font-size 1.7em
      font-weight 500
      line-height 1.5em
      color rgba(text-color, .5)