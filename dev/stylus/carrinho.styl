.cart-wrapper
  width 80%
  margin 0 auto
  border(1px, solid, #ddd)

  @media (max-width 1366px)
    width 90%

  @media (max-width 900px)
    width 92%

  @media (max-width 600px)
    width 86%

  .cart-item
    width 100%
    height 25em
    
    &:not(:last-child)
      border-bottom 1px solid #ddd