#montar-kit-form
  resize-width(true)
  margin-top 20em

  .form-title
    font-size 3.75em
    font-weight 800
    color theme-color

  .form-description
    width 30em
    margin-top 3.2em
    font-size 1.75em
    font-weight 600
    line-height 1.5em

  .fields-wrapper
    width 100%
    margin-top 6em
    flex-parent(row, wrap, flex-start)

    .form-field
      flex-basis 30em
      padding 4em
      border-radius(1.5em)
      box-shadow(0 25px 50px 0 rgba(183, 183, 183, .2))
      margin-right 7em

      &.fila-field
        flex-parent(row, nowrap, flex-start)
        flex-basis 100%
        margin-right 0

        &:not(:last-child)
          margin-bottom 3.5em

        .fila-drawning
          margin-right 3em
          border(2px, solid, #ddd)
          border-radius(1.5em)
          box-sizing border-box
          flex-basis 15em
          height 12em

        .fila-options
          flex-parent(row, wrap, flex-start)
          align-items center
          //flex-grow 1

          .fila-input-wrapper
            flex-parent(row, wrap, flex-start)
            align-items center
            flex-basis 100%

            &:not(:last-child)
              margin-bottom 2em
            
            label
            input[type=text]
            input[type=number]
            .select-field
            .delete-fila-btn
              font-size 1.7em

            label
              margin-right 1em
              font-weight 500
            
            input[type=number]
              width 4em
              border-bottom 2px solid #ddd
              font-weight 400
              text-align center

        .fila-actions
          flex-parent(row, wrap, flex-start)
          align-items center
          margin-left auto

          .action-delete
            set-square-size(2em)
            border-radius(.25em)
            background-color rgba(#dc3545, .25)

      &#distancia-ancoragens-field
        display none

      .field-label
        font-size 2.5em
        font-weight 800
      
      .label-cleaner
        width 100%
        height 3em

      .select-field
        padding .65em 1.5em .5em 1.5em
        font-size 1.75em
        font-weight 600
        border-style none
        cursor pointer
        background-color #f5f5f5

      .option-wrapper
        flex-parent(row, nowrap, flex-start)
        align-items center
        margin-bottom 1.2em

        .radio-input
          all unset
          display inline-block
          set-square-size(2em, false)
          border(2px, solid, #fff)
          border-radius(50%)
          box-shadow(0px 0px 0px 2px rgba(text-color, .75))
          cursor pointer

          &:checked
            background-color theme-color

        .option-label
          margin-top .2em
          font-size 1.75em
          font-weight 600
          margin-left 1.5em

#add-fila-btn
  width 20em
  margin-top 6em
  padding-top 1.6em
  padding-bottom 1.6em
  border-radius(1.2em)
  background-color rgba(text-color, .05)
  transition(400ms)
  cursor pointer

  p
    width 100%
    font-size 1.75em
    font-weight 600
    text-align center

  &:hover
    background-color rgba(text-color, .1)