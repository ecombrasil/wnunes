.mount-your-kit-title
  margin-top 4.75em
  margin-bottom .8em
  font-size 4em
  font-weight 800
  text-align center

  @media (max-width 1600px)
    margin-top 4.5em
    font-size 3.75em

  @media (max-width 1366px)
    margin-top 4.25em
    font-size 3.25em
    
  @media (max-width 768px)
    margin-top 4.75em
    margin-bottom 1.7em
    font-size 2.25em
    line-height 1.4em

#kit-request-sent-illustration
  width 50em
  margin .75em 0 1.5em calc(50% - 25em)

  @media (max-width 768px)
    width 75%
    margin-left 12.5%

.redirect-link
  font-size 1.75em
  text-align center

  @media (max-width 768px)
    font-size 1.65em