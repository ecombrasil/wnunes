#mounted-kit-items-wrapper
  width 80%
  margin-top 7.5em
  margin-left 10%
  border 1px solid #ddd
  border-radius(1.5em)
  background-color rgba(text-color, .01)
  flex-parent(row, wrap, center)

  @media (max-width 600px)
    width 86%
    margin-top 4em
    margin-left 7%

  .mounted-kit-item
    flex-basis 20em
    margin 2em

    @media (max-width 600px)
      &:not(:last-child)
        margin-bottom 2.5em

    .kit-item-img
      set-square-size(20em)
      object-fit contain
      border 1px solid #ddd
      border-radius(2.5em)

    .kit-item-name
    .kit-item-quantity
      margin-top 1em
      font-size 1.75em
      text-align center

      @media (max-width 600px)
        font-size 1.6em

    .kit-item-name
      font-weight 400
      line-height 1.5em

    .kit-item-quantity
      font-weight 600
      color theme-color

      @media (max-width 600px)
        margin-top .35em

    @media (max-width 1600px)
      flex-basis fb = 18em
      .kit-item-img
        set-square-size(fb)

    @media (max-width 1366px)
      flex-basis fb = 16em
      .kit-item-img
        set-square-size(fb)

#mounted-kit-footer
  resize-width(true)
  flex-parent(row, nowrap, center)
  margin-top 6em

  @media (max-width 600px)
    margin-top 4.5em
    justify-content space-between

  .page-footer-option
    padding .9em 1.6em .8em 1.6em
    font-size 1.75em
    font-weight 600
    text-align center
    border-radius(.5em)

    &:not(:last-child)
      margin-right 3em

      @media (max-width 600px)
        margin-right 1em

    @media (max-width 600px)
      font-size 1.6em

  .total-price-label
    border 1px solid #ddd
    box-sizing border-box
    background-color rgba(text-color, .01)

  .continue-button
    color reversed-text-color
    background-color theme-color
    cursor pointer